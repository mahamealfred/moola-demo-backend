# MOOLA MICROSERVICES ENVIRONMENT CONFIGURATION
# Copy this template to each service directory as .env

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=4000
HOST=localhost

# ==============================================
# DATABASE CONFIGURATION (MySQL/MariaDB)
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=moola_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DIALECT=mysql
DB_LOGGING=false

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=24h

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:4005
CORS_CREDENTIALS=true

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# ==============================================
# SERVICE SPECIFIC PORTS
# ==============================================
# API Gateway: PORT=4000
# Agency Service: PORT=4001  
# Account Service: PORT=4002
# Client Service: PORT=4003
# Identity Service: PORT=4004
# Test Agency Service: PORT=4005

# ==============================================
# EXTERNAL SERVICES (if applicable)
# ==============================================
# SMS_API_URL=
# SMS_API_KEY=
# PAYMENT_GATEWAY_URL=
# PAYMENT_GATEWAY_KEY=

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
HELMET_ENABLED=true
SECURITY_CSP_ENABLED=true

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ==============================================
# INTERNATIONALIZATION
# ==============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,rw,sw
I18N_FALLBACK_LANGUAGE=en